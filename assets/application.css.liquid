*,
*::before,
*::after {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

:root {
  --color-main: #0284c7;

  --color-main-dark-1: #013954;
  --color-main-dark-2: #01557f;
  --color-main-dark-3: #0271a9;
  --color-main-dark-4: #00131c;

  --color-main-light-1: #91dafe;
  --color-main-light-2: #65cbfd;
  --color-main-light-3: #39bcfd;

  --color-grey-light-1: #faf9f9;
  --color-grey-light-2: #f4f2f2;
  --color-grey-light-3: #f0eeee;
  --color-grey-light-4: #ccc;

  --color-grey-dark-1: #333;
  --color-grey-dark-2: #777;
  --color-grey-dark-3: #999;
}

html {
  font-size: 62.5%;
}

body {
  font-family: "Open Sans", sans-serif;
  font-size: 1.6rem;
  background-color: #fff;
  font-weight: 500;
  line-height: 1.4;
}

a {
  text-decoration: none;
  color: inherit;
}

.container {
  max-width: 120rem;
  margin: 0 auto;
}

label {
  display: block;
}

input,
select {
  font-family: inherit;
  color: inherit;
}

button {
  cursor: pointer;
}

/* ------------------------------- */
/* PROMO BAR */

.promo {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #f8d8bd;
  width: 100%;
  min-height: 55px;
  color: #333;
  padding: 0 3.2rem;
}

.promo__slider {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex: 0 0 70%;
  transform: translateX(25px);
}

.promo__slideshow {
  position: relative;
  height: 25px;
  width: 100%;
  text-align: center;
  overflow: hidden;
}

.promo__text {
  display: inline-block;
  width: 100%;
  position: absolute;
  top: 5%;
  left: 0;
  transition: all 0.5s;
}

.arr {
  cursor: pointer;
  font-size: 2rem;
  display: none;
}

/* ------------------------------- */
/* HEADER */

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  box-shadow: 0 0.2rem 10px rgba(0, 0, 0, 0.2);
  padding: 0.5rem 8rem;
  gap: 4.8rem;
}

.heading-logo {
  height: 7rem;
}

.header__logo {
  height: 100%;
}

.header__list {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 2.4rem;
  list-style: none;
}

.header__user-icons {
  display: flex;
  gap: 3rem;
}

.header__nav {
  transform: translateX(-4rem);
}

.header__link {
  font-size: 1.4rem;
}

.header__icon-box {
  width: 2.4rem;
  height: 2.4rem;
  cursor: pointer;
}

.header__icon-box svg {
  height: 100%;
  width: 100%;
}

.header__cart-icon {
  font-size: 1.8rem;
  color: #555;
  transition: all 0.3s;
}

.header__cart-icon:hover {
  color: #333;
}

/*  BUTTONS AND LINKS  */

.btn {
  display: inline-block;
  padding: 1rem 2.4rem;
  border-radius: 5px;
  font-weight: bold;
  font-size: 2.2rem;
  transition: all 0.2s;
}

.btn--full {
  border: none;
  background-color: #e67e22;
  color: #fff;
}

.btn--full:hover {
  background-color: #a15818;
}

.btn--outline {
  background-color: #fff;
  border: 1px solid currentColor;
  color: #e67e22;
}

.btn--outline:hover {
  background-color: #e67e22;
  color: #fff;
}

.u-margin-left-sm {
  margin-left: 1.8rem !important;
}

.link {
  color: inherit;
  display: inline-block;
  border-bottom: 2px solid currentColor;
  font-weight: 500;
  font-size: 1.8rem;
}

/*  UTILITIES  */
.u-center-text {
  text-align: center !important;
}

.u-margin-bottom-sm {
  margin-bottom: 1rem !important;
}

.u-margin-bottom-md {
  margin-bottom: 4.8rem !important;
}

.u-margin-bottom-big {
  margin-bottom: 9.8rem !important;
}

.heading__secondary {
  font-size: 4rem;
  color: #c27634;
}

.additional-msg {
  font-size: 2.2rem;
  color: #666;
}

.heading__tertiary {
  color: #e98b38;
  letter-spacing: 1px;
  font-size: 2.4rem;
}

/* CART MODAL */

.add-cart-confirmation,
.modal-cart {
  height: 100vh;
  width: 100vw;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100000;
  background-color: rgba(0, 0, 0, 0.6);
}

.confirmation {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  padding: 3.2rem;
}

.modal-cart {
  height: 100vh;
  width: 100vw;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: flex-end;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 100000;
}

.cart {
  display: flex;
  align-items: center;
  flex-direction: column;
  background-color: #eee;
  height: 100%;
  width: 60rem;
}

.hidden {
  visibility: hidden;
  opacity: 1;
}

.cart__upper-info {
  width: 100%;
  padding: 1.6rem 3.2rem;
  border-bottom: 1px solid #ccc;
}

.cart__upper-info__content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.cart__contact-info {
  letter-spacing: 1px;
}

.cart__cart-label {
  color: #333;
}

.cart__link {
  /* display: inline-block; */
  border: none;
  border-bottom: 1px solid currentColor;
  background-color: transparent;
}

.cart__body {
  display: flex;
  flex: 1;
  /* TODO: REMOVE THE FLEX:1 property when you add the cta box at the bottom and add oveflow-y: scroll */
  width: 100%;
  flex-direction: column;
  overflow-y: scroll;
}

.cart__body--centered {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
}

.cart__products {
  display: flex;
  /* align-items: center; */
  flex-direction: column;
  gap: 2rem;
  margin-bottom: auto;
  padding: 1.6rem 2.4rem;
}

.cart__product {
  display: flex;
  align-items: center;
  gap: 2rem;
  border-bottom: 1px solid #bbb;
  padding: 1.6rem 0 2.4rem;
}

.cart__product:not(:last-child) {
  border-bottom: 1px solid #bbb;
}

.cart__img-box {
  display: flex;
  align-items: center;
  width: 7rem;
}

.cart__img,
.cart__slideshow-img {
  width: 100%;
  height: auto;
}

button {
  background: none;
  border: none;
}

.cart__img-name-box {
  display: flex;
  align-items: center;
  margin-right: auto;
  gap: 1.4rem;
}
.cart__name-box {
  align-self: stretch;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.cart__quantity-box {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.cart__prod-quantity-selector-box {
  padding: 0 1.5rem;
  border: 1px solid #ccc;
  display: flex;
  align-items: center;
}

.cart__quantity-text {
  display: inline-block;
  padding: 1rem;
}

.cart__prod-quanitity-btn {
  font-size: 1.8rem;
}

.cart__prod-quanitity-btn-incr {
  margin-top: 3px;
}

.cart__product-delete {
  cursor: pointer;
}

.cart__price-box {
  display: flex;
  align-items: center;
  gap: 2px;
  /* justify-self: flex-end; */
}

.cart__price {
  font-size: 1.8rem;
}

.cart__price--compare {
  text-decoration: line-through;
}

.cart__price--active {
  color: #e67e22;
  font-weight: 600;
}

.cart__product--right-side {
  display: flex;
  justify-content: space-between;
  flex: 0 0 48%;
}

.cart__slideshow-slider {
  padding: 2rem 1.6rem;
  border: 1px solid #bbb;
  align-self: center;
  width: 70%;
  margin-bottom: auto;
}

.cart__slideshow-img-box {
  width: 100px;
}

.cart__slideshow-product {
  display: flex;
  gap: 1rem;
  margin-bottom: 1rem;
}

.cart__slideshow-name-box {
  align-self: flex-start;
  margin-right: auto;
}

.cart__slideshow-price-box {
  display: flex;
  flex-direction: column;
}

.cart__slideshow-btns {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 1rem;
}

.cart__slideshow-btn {
  font-size: 1.4rem;
}

.cart__summary {
  box-shadow: 0px -1px 5px rgba(0, 0, 0, 0.45);
  width: 100%;
  padding: 1.6rem;
  padding-right: 2.4rem;
}

.cart__summary--upper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 2.4rem;
}

.cart__summary-labels {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.cart__summary-label {
  font-size: 1.8rem;
}

.cart__summary-prices {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  text-align: right;
}

.cart__summary-final-prices {
  display: inline-block;
}

.cart__summary-price--compare {
  text-decoration: line-through;
  font-weight: 500;
}

.cart__summary-price--main {
  font-size: 2rem;
  color: #e67e22;
  font-weight: 600;
}

.cart__summary-price--tax {
  text-align: right;
}

.cart__summary-price--shipping {
  text-align: right;
}

.cart__summary--btn-cont {
  text-align: center;
}

/* ADD this if the shipping is free */
.cart__summary-price--shipping-free {
  text-transform: uppercase;
  font-weight: 600;
}

.flex-container {
  display: flex;
  align-items: center;
  justify-content: center;
}

.mob-nav {
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.9);
  z-index: 30000;
  transform: translateX(0);
  transition: all 0.3s;
}

.mob-nav-icon-close {
  position: absolute;
  right: 5rem;
  top: 4rem;
  font-size: 4.2rem;
  font-weight: 300;
}

.mob-nav-icon {
  transform: scale(0.6);
}

.mob-nav__list {
  list-style: none;
  display: flex;
  flex-direction: column;
  gap: 2.7rem;
  align-items: center;
  color: #e67e22;
}

.mob-nav__list-item {
}

.mob-nav__link:link,
.mob-nav__link:visited {
  font-size: 2.7rem;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  display: inline-block;
  border-bottom: 1px solid transparent;
}

.mob-nav__link:hover,
.mob-nav__link:active {
  border-bottom: 1px solid currentColor;
}

@media only screen and (max-width: 81.25em) {
  .header {
    padding: 2.4rem 8rem;
  }
}

@media only screen and (max-width: 71.25em) {
  .header {
    padding: 1rem 8rem;
  }

  .header__nav {
    display: none;
  }

  .heading-logo {
    margin: 0 auto;
  }

  .heading__secondary {
    font-size: 3 rem;
  }
}

@media only screen and (max-width: 900px) {
  .promo {
    gap: 4.8rem;
    justify-content: center;
  }

  .promo .empty {
    display: none;
  }

  .promo__slider {
    transform: translateX(0);
    /*     flex: 0 0 50%; */
    flex: 1;
    justify-self: center;
  }

  .promo__contact {
    display: none;
  }
}

#shopify-section-header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}

.mob-nav--hidden {
  visibility: hidden;
  opacity: 0;
  transform: translateX(-100%);
}

@media only screen and (max-width: 900px) {
  .cart__product {
    padding: 1.6rem 3.2rem 2.4rem;
  }

  .cart__upper-info {
    padding: 1.6rem 3.2rem;
  }
}

@media only screen and (max-width: 46.87em) {
  .heading__primary {
    font-size: 3.2rem !important;
  }
}

@media only screen and (max-width: 30.625em) {
  .promo {
  }
}

@media only screen and (max-width: 400px) {
  .promo {
    display: none;
  }
}
