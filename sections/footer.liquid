<div class="footer--upper-part">
    {% for block in section.blocks %}
        {% if block.type == 'menu' %}
            {% assign footer_menu = linklists[block.settings.footer_menu] %}

            <nav class="footer__nav">
                <h4 class="footer__heading">{{ footer_menu.title }}</h4>
                <ul class="footer__nav-list">
                    {% for link in footer_menu.links %}
                        <li class="footer__list-item">
                            <a class="footer__nav-link" href="{{ link.url }}">{{ link.title }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </nav>

        {% elsif block.type == 'social_icons' %}
            <div class="footer__social">
                <h4 class="footer__heading">{{ block.settings.heading }}</h4>

                <div class="footer__social-icons">
                    {% if block.settings.facebook_link != blank %}
                        <a class="footer__social-icon-link" href="{{ block.settings.facebook_link }}"><img class="footer__social-icon" src="https://img.icons8.com/color/48/000000/facebook-new.png"/></a>
                    {% endif %}

                    {% if block.settings.instagram_link != blank %}
                        <a class="footer__social-icon-link" href="{{ block.settings.instagram_link }}"><img class="footer__social-icon" src="https://img.icons8.com/color/48/000000/instagram-new--v1.png"/></a>
                    {% endif %}

                    {% if block.settings.youtube_link %}
                        <a class="footer__social-icon-link" href="{{ block.settings.youtube_link }}"><img class="footer__social-icon" src="https://img.icons8.com/fluency/48/000000/youtube-play.png"/></a>
                    {% endif %}
                </div>
            </div>

        {% elsif block.type == 'contacts' %}
            <div class="footer__contacts">
                <h4 class="footer__heading">{{ block.settings.contacts_heading }}</h4>
                <p class="footer__contacts-desc">{{ block.settings.contacts_desc }}</p>
            </div>
        {% endif %}
    {% endfor %}
</div>

<div class="footer__bottom-part">
    <span class="footer__copy">
        <span>&copy;<span class="date"></span> </span>
            <span>{{ shop.name }}</span>
        
    </span>
</div>

<script>
  const date = document.querySelector('.date');
  date.textContent = new Date().getFullYear();
  console.log(date, date.textContent)
</script>

