{% schema %}

{
    "name": "Footer",
    "tag": "footer",
    "class": "footer",
    "max_blocks": 7,
    "blocks": [
        {
            "name": "Menu",
            "type": "menu",
            "limit": 4,
            "settings": [
                {
                    "type": "link_list",
                    "id": "footer_menu",
                    "label": "Menu 1"
                }
            ]
        }, {
            "name": "social_icons",
            "type": "social_icons",
            "settings": [
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading"
                }, {
                    "type": "text",
                    "id": "facebook_link",
                    "label": "Facebook"
                }, {
                    "type": "text",
                    "id": "instagram_link",
                    "label": "Instagram"
                }, {
                    "type": "text",
                    "id": "youtube_link",
                    "label": "YouTube"
                }
            ]
        }, {
            "name": "Contacts",
            "type": "contacts",
            "settings": [
                {
                    "type": "text",
                    "id": "contacts_heading",
                    "label": "Heading"
                }, {
                    "type": "textarea",
                    "id": "contacts_desc",
                    "label": "Description"
                }
            ]
        }
    ]
}

{% endschema %}

{% style %}
	.footer {
		background-color: rgb(247, 247, 247);
		color: #333;
    padding: 6.4rem 4.8rem;
    
	}

  .footer--upper-part {
    display: flex;
    justify-content: space-between;
    padding-bottom: 6rem;
    flex-wrap: wrap;
    gap: 4.8rem;
  }

  .footer__heading {
    font-weight: 600;
    margin-bottom: 2rem;
  }

	.footer__nav:not(:first-child) {
		border-left: 1px solid #ccc;
		padding-left: 4.8rem
	}

  .footer__nav-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 3px;
  }

  .footer__list-item {

  }

  .footer__nav-link:link,
  ..footer__nav-link:visited {
		color: #555;
        transition: all .3s;
  }

  .footer__nav-link:hover,
  .footer__nav-link:active {
      color: #333;
  }

  .footer__social:not(:first-child) {
	border-left: 1px solid #ccc;
		padding-left: 4.8rem
	}

  .footer__social-icons {
    display: flex;
    align-items: flex-start;
    gap: .5rem;
  }

  .footer__social-icon-link {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .footer__social-icon {
    height: 3rem;
    width: 3rem;
    
  }



  .footer__contacts {
    
    flex: 0 0 20%;
    
  }

	.footer__contacts:not(:first-child) {
		border-left: 1px solid #ccc;
		padding-left: 4.8rem
	}	

  .footer__bottom-part {
    
  }

  .footer__copy {
    font-size: 2rem;
  }

  @media only screen and (max-width: 71.25em) {

		.footer__nav:not(:first-child) {
			border: 1px solid transparent;
		}

		.footer__social:not(:first-child) {
			border: 1px solid transparent;
		}

		.footer__contacts:not(:first-child) {
			border: 1px solid transparent;
		}
  }

{% endstyle %}