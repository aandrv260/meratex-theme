<div class="page">
<h1 class="page__heading">{{ page.title }}</h1>
<div class="page__content">{{ page.content }}</div>
</div>

{% style %}
.page {
	padding: 6rem 0;
}

.page__heading {
	text-align: center;
	margin-bottom: 4.8rem;	
	font-size: 4rem;
}

.page__content {
	width: 50%;
	margin: 0 auto;
}

.page__content p {
	font-size: 1.8rem;
	line-height: 1.8;
	letter-spacing: .5px;
}

.page__content h2 {
	margin-bottom: 1rem;
}

.page__content p{
	margin-bottom: 1.4rem;
}

@media only screen and (max-width: 71.25em) {
	.page__content {
		width: 60%;
	}
}

@media only screen and (max-width: 56.25em) {
	.page__content {
		width: 80%;
	}
}

