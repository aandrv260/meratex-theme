<div class="container">

    <div class="article">
        <div class="u-center-text u-margin-top-md">
            <h1 class="heading__secondary">{{ article.title }}</h1>
            <span class="article__author">{{ article.author }}</span>
        </div>
        <img class="article__img" src="{{ article.image | img_url: '1000x' }}" alt="{{ article.image.alt }}"/>
        
        <div class="article__content">

            {{ article.content }}
        </div>
    </div>
</div>

{% style %}
.article {
	    display: flex;
    flex-direction: column;
    justify-content: center;
}
.article h1 {
    font-size: 5rem;
    letter-spacing: 1px;
    font-weight: 500;
}

.u-margin-top-md {
    margin-top: 3.2rem;
}

.article__img {
    width: 80%;
    margin: 4.8rem auto;
}

.article p {
    font-size: 2rem;
    line-height: 1.8;
    margin-bottom: 1.2rem;
    letter-spacing: .3px;
}

.article__author {
    font-size: 2rem;
    color: #555;
    font-weight: 500;
}

.article h2 {
    font-size: 3.2rem;
}

.article h3 {
    font-size: 2.8rem;
}

.article h2,
.article h3,
.article h4 {
    margin-bottom: .7rem;
}

.article__content {
    margin-bottom: 8rem;
	padding: 0 3.2rem;
}


{% endstyle %}